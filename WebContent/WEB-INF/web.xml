<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>XiaoLi</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>run</servlet-name>
    <servlet-class>servlet.Run</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>run</servlet-name>
    <url-pattern>/run</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>poll</servlet-name>
    <servlet-class>servlet.Poll</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>poll</servlet-name>
    <url-pattern>/poll</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>buffer</servlet-name>
    <servlet-class>servlet.Buffer</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>buffer</servlet-name>
    <url-pattern>/buffer</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>imglabel</servlet-name>
    <servlet-class>servlet.ImgLabel</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>imglabel</servlet-name>
    <url-pattern>/imglabel</url-pattern>
  </servlet-mapping>
</web-app>